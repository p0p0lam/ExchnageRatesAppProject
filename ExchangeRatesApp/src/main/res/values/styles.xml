<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/default_button</item>
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppTheme">
        <item name="actionbar_listPreferredItemHeight">48dp</item>
        <item name="rate_listPreferredItemHeight">72dp</item>
        <item name="map_collapsePreferredItemHeight">140dp</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- action bar tab text -->
    <style name="TabTextStyle"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/primary_3</item>
    </style>
    <style name="RatesTextView" parent="TextAppearance.AppCompat.Medium">
       <!-- <item name="android:textColor">@color/black</item> -->
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="RatesTextView.Main">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RatesTextView.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RatesTextView.Medium">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="RatesTextView.Medium.Grey">
        <item name="android:textColor">@color/text_supl</item>
    </style>
    <style name="RatesTextView.Sup" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <!--<item name="android:textColor">@color/text_supl</item> -->
    </style>

</resources>
